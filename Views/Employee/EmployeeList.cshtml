@model List<Employee>
@{
    ViewData["Title"] = "Employees Table";
}

<div id="header">
    <h1>@ViewData["Title"]</h1>
    <br />
</div>
<div id="content">
    <a asp-controller="Employee" asp-action="Add">Add New Employee</a>
    <table>
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Position</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeID</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Position</td>
                    <td><a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.EmployeeID">Edit</a></td>
                    <td><a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.EmployeeID">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>